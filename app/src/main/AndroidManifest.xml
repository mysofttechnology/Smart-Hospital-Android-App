        <activity android:name=".AboutHospital" />
        <activity android:name=".TakeUrl" />
        <activity android:name=".OpenPdf" />
        <activity
            android:name=".patient.PatientDashboard"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".patient.PatientAppoinmentList" />
        <activity android:name=".patient.PatientBloodBank" />
        <activity android:name=".patient.PatientComponentIssue" />
        <activity android:name=".patient.PatientAmbulanceLists" />
        <activity android:name=".patient.PatientNotification" />
        <activity android:name=".patient.PatientIpdPatientLists" />
        <activity android:name=".patient.PatientRadiology" />
        <activity android:name=".patient.PatientPathology" />
        <activity android:name=".patient.NotificationList" />
